@model List<TeknolojiMagazasi.Model.Satıs>

@{
    ViewBag.Title = "Satış Listele";
}

<section class="py-5"></section>
<section class="py-5"></section>

<section class="text-center">
    <div class="container">
        <h2>Satış Listele</h2>
        <hr />
    </div>
</section>


<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <table class="table">
                    <tr>
                        <th>Id</th>
                        <th>Tarih Saat</th>
                        <th>Toplam Tutar</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.TarihSaat</td>
                            <td>@item.ToplamTutar.ToString("C")</td>
                            <td>
                                <a href="@Url.Action("Sil", new { id = item.Id })" class="btn btn-danger btn-xs">Sil</a>
                                <a href="@Url.Action("SatisDetay", new { id = item.Id })" class="btn btn-info btn-xs">Detay</a>

                            </td>
                        </tr>
                    }
                </table>
            </div>
         </div>
      </div>
</section>
  