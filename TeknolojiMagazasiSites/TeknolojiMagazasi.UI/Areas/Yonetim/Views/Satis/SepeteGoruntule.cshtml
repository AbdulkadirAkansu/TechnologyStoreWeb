@model TeknolojiMagazasi.Model.Satıs

@{
    ViewBag.Title = "Sepet Detay Listele";
}

<section class="py-5"></section>
<section class="py-5"></section>

<section class="text-center">
    <div class="container">
        <h2>Sepet Detay Ekle</h2>
        <hr />
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <table class="table">
                    <tr>
                        <th>Urun</th>
                        <th>Adet</th>
                        <th>Tutar</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.Detaylar)
                    {
                        <tr>
                            <td>@((item.Urun == null)?"Yok" : item.Urun.Ad)</td>
                            <td>@item.Adet</td>
                            <td>@item.Tutar.ToString("C")</td>
                            <td>
                            </td>
                        </tr>
                    }
                    @if (Model.Detaylar.Count == 0)
                    {
                        <tr>
                            <td colspan="3"><span class="text-danger">Sepet Boş</span></td>
                        </tr>
                    }
                </table>

                <a href="@Url.Action("SatisEkle")">Geri</a>
                @if (Model.Detaylar.Count != 0)
                {
                    <a href="@Url.Action("SatisTamamla")" class="btn btn-primary">Tamamla</a>
                }
           </div>
        </div>
     </div>
</section>
