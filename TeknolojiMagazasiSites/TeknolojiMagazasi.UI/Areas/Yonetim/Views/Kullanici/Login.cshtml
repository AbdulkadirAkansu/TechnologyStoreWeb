@model TeknolojiMagazasi.Model.Kullanıcı

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body class="py-5">
    <section class="py-5"></section>
    <div class="col-md-6 offset-md-3 mx-auto">
        <h2 class="text-center">Lütfen Giriş Yapınız</h2>
        <hr />
        @using (Html.BeginForm("Login", "Kullanici", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group col-md-6 offset-md-3">
                @Html.LabelFor(x => x.EPosta, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.EPosta, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.EPosta, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6 offset-md-3">
                @Html.LabelFor(x => x.Parola, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(x => x.Parola, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Parola, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6 offset-md-3 mx-auto text-center">
                <div class="col-md-offset-2 col-md-10 py-3">
                    <button type="submit" class="btn btn-primary">Giriş</button>
                </div>
            </div>
        }


    </div>
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

</body>
</html>

